<Window x:Class="MessengerWindowsClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MessengerWindowsClient"
        xmlns:pages="clr-namespace:MessengerWindowsClient.Pages"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="800" Closed="Window_Closed">
    <Window.Background>
        <ImageBrush ImageSource="Resources/background.jpg"></ImageBrush>
    </Window.Background>
    <Grid x:Name="Container" RenderTransformOrigin="0.5,0.5">
        <pages:MessagesPage></pages:MessagesPage>
        <pages:WelcomePage x:Name ="WelcomePage" Visibility="Collapsed"></pages:WelcomePage>
        <pages:LoginPage x:Name="LoginPage" Visibility="Collapsed"></pages:LoginPage>
        <pages:RegisterPage x:Name="RegisterPage" Visibility="Collapsed"></pages:RegisterPage>
        <Image x:Name="BackArrow" Height="50" Margin="10,10,0,0" VerticalAlignment="Top" Width="50" HorizontalAlignment="Left" Source="Resources/backArrow.png" Opacity="0.5" MouseEnter="BackArrow_MouseEnter" MouseLeave="BackArrow_MouseLeave" MouseLeftButtonDown="BackArrow_MouseLeftButtonDown" Visibility="Collapsed"></Image>
    </Grid>
</Window>



