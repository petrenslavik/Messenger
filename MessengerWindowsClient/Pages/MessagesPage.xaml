<UserControl x:Class="MessengerWindowsClient.Pages.MessagesPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MessengerWindowsClient.Pages"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" MinWidth="260"/>
            <ColumnDefinition Width="1"/>
            <ColumnDefinition Width="*" MinWidth="385"/>
        </Grid.ColumnDefinitions>
        <GridSplitter Grid.Column="1" x:Name="InterfaceSplitter" HorizontalAlignment="Center" Width="8" SizeChanged="InterfaceSplitter_SizeChanged"/>
        <Grid Grid.Column="0" x:Name="ConversationsGrid" MinWidth="250">
            <Grid.RowDefinitions>
                <RowDefinition Height="65"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
            </Grid.RowDefinitions>
            <Grid x:Name="SearchAndMenuGrid" Grid.Row="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="Green">
            </Grid>
            <ListBox x:Name="ConversationsList" Grid.Row="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="Blue">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Margin="5" Height="55">
                            <TextBlock FontSize="18" Text="{Binding}"></TextBlock>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Grid>
        <Grid Grid.Column="2" x:Name="MessagesGRid" HorizontalAlignment="Left" Margin="0,0,0,0" VerticalAlignment="Top" Width="75"/>
    </Grid>
</UserControl>
