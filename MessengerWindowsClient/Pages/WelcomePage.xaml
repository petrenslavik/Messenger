<UserControl x:Class="MessengerWindowsClient.Pages.WelcomePage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MessengerWindowsClient.Pages"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid x:Name="Login" Height="416" VerticalAlignment="Top" HorizontalAlignment="Center">
        <Label x:Name="WelcomeMessage" Content="Welcome to Messenger" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,66,0,0" FontSize="26" FontFamily="Arial"/>
        <Label x:Name="ExplainMessage" Content="To use messenger you should register or login in existing account." VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="18" FontFamily="Arial"/>
        <Button x:Name="ToLoginPage" Content="Login" HorizontalAlignment="Left" Margin="10,255,0,0" VerticalAlignment="Top" Width="75"/>
        <Button x:Name="ToRegisterPage" Content="Register" HorizontalAlignment="Right" Margin="10,255,0,0" VerticalAlignment="Top" Width="75"/>
    </Grid>
</UserControl>
